{
  "name": "@babylonjsmarket/arcade",
  "private": false,
  "version": "1.0.0",
  "description": "A lightweight TypeScript Entity-Component-System (ECS) starter built for endless BabylonJS game development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "github": {
    "url": "https://github.com/babylonjsmarket/arcade.git"
  },
  "author": "Lawrence Whiteside contact@lawrencewhiteside.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/babylonjsmarket/arcade.git"
  },
  "bugs": {
    "url": "https://github.com/babylonjsmarket/arcade/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc -p tsconfig.lib.json",
    "prepublishOnly": "npm run build:lib",
    "publish:dry": "npm publish --dry-run",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "preview": "vite preview",
    "games": "tsx scripts/make-game-data.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "game-engine",
    "babylonjs",
    "3d",
    "game-development",
    "typescript"
  ],
  "author": "My Arcade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/my-arcade.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/my-arcade/issues"
  },
  "homepage": "https://github.com/yourusername/my-arcade#readme",
  "peerDependencies": {
    "@babylonjs/core": "^8.0.0",
    "@babylonjs/materials": "^8.0.0",
    "@babylonjs/inspector": "^8.0.0",
    "@babylonjs/loaders": "^8.0.0"
  },
  "devDependencies": {
    "@babylonjs/core": "^8.22.0",
    "@babylonjs/materials": "^8.22.0",
    "@babylonjs/inspector": "^8.18.0",
    "@babylonjs/loaders": "^8.18.0",
    "@types/node": "^24.2.0",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.1.2",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chokidar": "^4.0.3",
    "tsx": "^4.20.3"
  }
}
